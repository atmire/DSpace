                    <string>patent</string>
                    <string>other</string>
                </list>
            </Configuration>
        </CustomCondition>
        <CustomCondition id="driverAccessCondition">
            <Class>org.dspace.xoai.filter.DSpaceAtLeastOneMetadataFilter</Class>
            <Configuration>
                <string name="field">dc.rights</string>
